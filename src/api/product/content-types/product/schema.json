{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "mpn": {
      "type": "string",
      "unique": true
    },
    "barcode": {
      "type": "string",
      "unique": false
    },
    "description": {
      "type": "text"
    },
    "short_description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "sale_price": {
      "type": "decimal",
      "min": 0
    },
    "is_sale": {
      "type": "boolean",
      "default": false
    },
    "is_hot": {
      "type": "boolean",
      "default": false
    },
    "inventory": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "additionalFiles": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "additionalImages": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "InStock",
        "MediumStock",
        "LowStock",
        "Backorder",
        "OutOfStock"
      ],
      "default": "InStock",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "is_fixed_price": {
      "type": "boolean",
      "default": false
    },
    "model": {
      "type": "string"
    },
    "deletedAt": {
      "type": "datetime"
    },
    "weight": {
      "type": "integer",
      "default": 0
    },
    "length": {
      "type": "decimal",
      "default": 0
    },
    "width": {
      "type": "decimal",
      "default": 0
    },
    "height": {
      "type": "decimal",
      "default": 0
    },
    "need_verify": {
      "type": "boolean",
      "default": false,
      "private": true
    },
    "related_with": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "related_to"
    },
    "related_to": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "related_with"
    },
    "supplierInfo": {
      "displayName": "Info",
      "type": "component",
      "repeatable": true,
      "component": "products.info"
    },
    "prod_chars": {
      "displayName": "Chars",
      "type": "component",
      "repeatable": true,
      "component": "products.chars"
    },
    "platforms": {
      "displayName": "platform",
      "type": "component",
      "repeatable": true,
      "component": "products.platform"
    },
    "seo": {
      "displayName": "Seo",
      "type": "component",
      "repeatable": true,
      "component": "shared.seo"
    },
    "related_import": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::import-products.importxml",
      "mappedBy": "related_products"
    },
    "is_in_house": {
      "type": "boolean",
      "default": false
    },
    "notice_if_available": {
      "type": "boolean",
      "default": false
    },
    "coupons": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::coupon.coupon",
      "mappedBy": "excludedProducts"
    },
    "purchace_history": {
      "displayName": "purchace_history",
      "type": "component",
      "repeatable": true,
      "component": "products.purchace-history"
    }
  }
}
