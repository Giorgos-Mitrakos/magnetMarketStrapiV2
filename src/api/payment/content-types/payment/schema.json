{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "range": {
      "displayName": "range",
      "type": "component",
      "repeatable": false,
      "component": "payment.range"
    },
    "price": {
      "type": "decimal",
      "required": false,
      "default": 0,
      "min": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "installments": {
      "displayName": "installments",
      "type": "component",
      "repeatable": false,
      "component": "payment.installments"
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "credit_card",
        "debit_card",
        "cash",
        "cash_on_delivery",
        "bank_transfer",
        "iris_payment"
      ],
      "required": true
    },
    "description": {
      "type": "string"
    }
  }
