{
  "kind": "collectionType",
  "collectionName": "platforms",
  "info": {
    "singularName": "platform",
    "pluralName": "platforms",
    "displayName": "Platform",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "entryURL": {
      "type": "string",
      "required": true
    },
    "merchantFeeCatalogue": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "export_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "export_to_platforms"
    },
    "order_time": {
      "type": "time",
      "default": "11:50"
    },
    "platformCategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::platform-scrapper.platformcategory",
      "mappedBy": "platform"
    },
    "product_scrap_days": {
      "type": "integer",
      "required": true,
      "default": 10
    },
    "only_in_house_inventory": {
      "type": "boolean"
    }
  }
}
